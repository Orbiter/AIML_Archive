<category>
<pattern>BXCHOOSENUMBER</pattern>
<template>
<think>
<random>
<li><set name="box">1</set></li>
<li><set name="box">2</set></li>
<li><set name="box">3</set></li>
<li><set name="box">4</set></li>
<li><set name="box">5</set></li>
<li><set name="box">6</set></li>
