<category>
<pattern>BXDISPLAYBOARD</pattern>
<template>
	<condition name="afin"> 
		<li value="0">A) <get name="a1"/> -<get name="a2"/> -<get name="a3"/> -<get name="a4"/> -<get name="a5"/> -<get name="a6"/> /<get name="atot"/><br/></li>
