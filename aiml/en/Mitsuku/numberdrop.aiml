	</condition>
	<condition name="bfin"> 
		<li value="0">B) <get name="b1"/> -<get name="b2"/> -<get name="b3"/> -<get name="b4"/> -<get name="b5"/> -<get name="b6"/> /<get name="btot"/><br/></li>
		<li value="1">CONGRATULATIONS!!<br/><think><set name="bnext">BUST</set></think></li>
	</condition>
	<condition name="cfin"> 
