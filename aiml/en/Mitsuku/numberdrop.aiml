<li><set name="box">10</set></li>
<li><set name="box">10</set></li>
<li><set name="box">11</set></li>
<li><set name="box">11</set></li>
</random>
<set name="topic">NUMBERDROP</set>
<set name="checkgameover"><get name="anext"/><get name="bnext"/><get name="cnext"/><get name="dnext"/></set>
